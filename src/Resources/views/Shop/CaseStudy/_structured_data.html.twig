{% set newsArticle = {
    "@context": "https://schema.org",
    "@type": "NewsArticle",
    "headline": case_study.title,
    "datePublished": case_study.publishedAt|date('c'),
    "dateModified": case_study.updatedAt|date('c'),
} %}

{% if case_study.image is not empty %}
    {% set newsArticle = newsArticle|merge({
        "image": [
            case_study.image|default('monsieurbiz_case_study_image_thumbnail'),
        ]
    }) %}
{% endif %}

<script type="application/ld+json">
    {{ newsArticle|json_encode(constant('JSON_UNESCAPED_SLASHES'))|raw }}
</script>
